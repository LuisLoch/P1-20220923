<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idKmAtual"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:hint="@string/kmAtual"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/idQtdAbastecida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idQtdAbastecida"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/qtdAbastecida"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idKmAtual"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idValor"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:hint="@string/valorGasto"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toStartOf="@+id/idData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idKmAtual" />

    <EditText
        android:id="@+id/idData"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/data"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idValor"
        app:layout_constraintTop_toBottomOf="@+id/idQtdAbastecida" />

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="519dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBotao">

        <ListView
            android:id="@+id/idLista"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/idBotao"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="34dp"
        android:onClick="salvar"
        android:text="@string/salvar"
        app:layout_constraintStart_toEndOf="@+id/idMediaConsumo"
        app:layout_constraintTop_toBottomOf="@+id/idData" />

    <TextView
        android:id="@+id/idMediaConsumo"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintEnd_toStartOf="@+id/idBotao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idMediaConsumoLabel" />

    <TextView
        android:id="@+id/idMediaConsumoLabel"
        android:layout_width="185dp"
        android:layout_height="35dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="215dp"
        android:text="@string/mediaConsumo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idValor" />
</androidx.constraintlayout.widget.ConstraintLayout>